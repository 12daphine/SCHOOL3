<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SCHOOL" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:colorPrimary">@color/green</item>
        <item name="android:navigationBarColor">@color/red</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.White" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/purple_700</item>
    </style>

    <style name="Theme.SCHOOL." parent="Theme.SCHOOL" />

    <style name="splash_screen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

</resources>